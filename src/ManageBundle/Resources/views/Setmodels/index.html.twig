{% extends 'ManageBundle:layout:content-layout.html.twig' %}
{% block content %}
<div class="row">
	<!-- /.col -->
	<div class="col-md-7">
		<div class="box box-primary">
		    <div class="box-body">
    			<!-- /.box-header -->
    			<div class="dataTables_filter" id="searchDiv">
    				<input placeholder="请输入模型名" name="name" class="form-control" type="search" likeOption="true" />
    				<div class="btn-group">
    					<button type="button" class="btn btn-primary" 	data-btn-type="search">查询</button>
    				</div>
    				<div class="btn-group">
    					<button type="button" class="btn btn-default" data-btn-type="add">新增</button>
    					<button type="button" class="btn btn-default" data-btn-type="edit" >编辑</button>
    					<button type="button" class="btn btn-default" data-btn-type="delete">删除</button>
    					<button type="button" class="btn btn-default" data-btn-type="create">生成</button>
    				</div>
    			</div>
    			<div class="box-body">
    				<table id="models_table" class="table table-bordered table-striped table-hover">
    				</table>
    			</div>
			</div>
			<!-- /.box-body -->
		</div>
	</div>
	<div class="col-md-5">
		<!-- Profile Image -->
		<div class="box box-primary">
		    <div class="box-body">
    		    <!-- /.box-header -->
    			<div class="dataTables_filter" id="searchDiv_modelsattr">
    			    <input type="hidden"  name="model_id" value="a" id="modelId" />
    				<div class="btn-group">
    					<button type="button" class="btn btn-default" data-btn-type="addattr">新增</button>
    					<button type="button" class="btn btn-default" data-btn-type="editattr" >编辑</button>
    					<button type="button" class="btn btn-default" data-btn-type="deleteattr">删除</button>
    				</div>
    			</div>
    			<div class="box-body">
    				<table id="modelattr_table" class="table table-bordered table-striped table-hover">
    				</table>
    			</div>
			</div>
			<!-- /.box-body -->
		</div>
		<!-- /.box -->
	</div>
</div>
{% endblock %}
{% block javascripts %}
<script src="/bundles/manage/js/models.js" ></script>
<script>
    var modelsJs = "";
    var listurl = "{{ bundle }}/{{ controller }}/list";
    $(function() {
    	modelsJs = $("#searchDiv").models({'winId':"modelsWin", 'b':'{{ bundle }}', 'c':'{{ controller }}'});
    });
</script>
{% endblock %}